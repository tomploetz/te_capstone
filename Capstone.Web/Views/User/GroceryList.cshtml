        <div class="card-header" style="background-color:white;">
            <h2 class="card-title">Grocery List</h2>
            <div class="card-body">
            </div>
            <ul class="list-group list-group-flush">
                <ul class="list-group-item">
                    @for (int i = 0; i < Model.Count; i++)
