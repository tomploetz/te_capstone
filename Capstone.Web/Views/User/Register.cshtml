@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.EnableClientValidation(false);
}

@using Capstone.Web.Models.ViewModels
@model RegistrationViewModel

<section class="bgimg pt-5">
    <div class="card m-auto p-3" style="width: 300px; margin-top:50px !important;">
        <div id="section1" class="card-header" style="text-align: center; background-color:white"><h1>Register</h1></div>
        @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "regForm" }))
        {
            
            <div class="container">
                @*<h1 class="login-align">Register</h1>*@

                <label for="FirstName" class="mt-3 mb-0"><b>First Name</b></label>
                <input type="text" class="form-control" placeholder="Enter First Name" name="FirstName" required>

                <label for="LastName" class="mt-3 mb-0"><b>Last Name</b></label>
                <input type="text" class="form-control" placeholder="Enter Last Name" name="LastName" required>

                <label for="UserName" class="mt-3 mb-0"><b>Username</b></label>
                <input type="text" class="form-control" placeholder="Enter UserName" name="UserName" required>

                <label for="Password" class="mt-3 mb-0"><b>Password</b></label>
                <input type="Password" id="Password" class="form-control" placeholder="Enter Password" name="Password" required>

                <label for="ConfirmPassword" class="mt-3 mb-0"><b>Confirm Password</b></label>
                <input type="Password" class="form-control" placeholder="Re-enter Password" name="ConfirmPassword" required>


            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-success btn-lg btn-space">Submit</button>
            </div>
        }
    </div>

    </section>